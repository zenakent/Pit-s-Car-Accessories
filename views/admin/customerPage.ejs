<% include ./partials/header %>

<div class="col-lg-12">
    <div class="block margin-bottom-sm">
        
        <div class="table-responsive">
            <div class="title"><strong>Customer Info</strong></div>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th>is Activated</th>
                          <th>Email</th>
                         
                        </tr>
                      </thead>
                      <tbody>
                        
                        <tr>
                          <td scope="row"><%= foundUser.firstName %> <%= foundUser.lastName %></th>
                          <td><%= foundUser.isActivated %></td>
                          <td><%= foundUser.email %></td>
                          
                        </tr>
                        
                        
                        
                        </tr>
                      </tbody>
                    </table>
                    </div>
                
                  <div class="title"><strong>Shipping Addresses</strong></div>
                  <div class="table-responsive">
                     
                    <table class="table table-striped table-hover">
                      <thead>
                        <tr>
                          <th>Default</th>
                          <th>Full Name</th>
                          <th>Contact Number</th>
                          <th>Address</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% foundUser.shippingAddress.forEach(function(address) { %>
                        <tr>
                          <th scope="row"><%= address.defaultAddress %></th>
                          <td><%= address.fullName %></td>
                          <td><%= address.contactNumber %></td>
                          <td><%= address.address %></td>
                        </tr>
                        <% }) %>
                        </tr>
                    </tbody>
                    </table>
                </div>
                <div class="title"><strong>More Info</strong></div>
                  <div class="table-responsive">
                    <thead>
                    <tr>
                        
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>
                            <a href="/admin/customerList/<%= foundUser._id %>/orders" class="btn btn-info">Customer Orders</a>
                            <!-- Trigger/Open The Modal -->
                            <button id="myBtn" class="btn btn-danger" onclick="showModal('myModal-<%= foundUser._id%>')">Delete Customer</button>
                            
                            <!-- The Modal -->
                            <div id="myModal-<%= foundUser._id%>" class="modal">
                            
                            <!-- Modal content -->
                            <div class="modal-content">
                                <span class="close d-flex justify-content-end ">&times;</span>
                                <h2 class="d-flex justify-content-center">Are you sure your want to remove the customer?</h2>
                                <form class="d-flex justify-content-center" action="/admin/customerList/<%= foundUser._id %>?_method=DELETE" method="POST" style="display:inline">
                                        <input type="submit" value="Delete Customer" class="btn btn-danger" />
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                </form>
                            </div>
                            </div>
                        </th>
                    </tr>
                </tbody>
                </div>
                
              
        </div>
    </div>
</div>
<% include ./partials/footer %>