<% include ./partials/header %>


  <% if (!products) { %>
  <div class="container">
  <!-- BEGIN CONTENT -->
          <div class="col-md-12 col-sm-12">
            <h1 style="color: white">Shopping cart</h1>
            <div class="shopping-cart-page">
              <div class="shopping-cart-data clearfix">
                <p style="color: white">Your shopping cart is empty!</p>
              </div>
            </div>
          </div>
  <!-- END CONTENT -->
</div>

<br>
  <% } else { %>
<div class="container">
  
  <!-- BEGIN CONTENT -->
          <div class="col-md-12 col-sm-12">
            <h1 style="color: white">Shopping cart</h1>
            <div class="goods-page">
              <div class="goods-data clearfix">
                <div class="table-wrapper-responsive">
                <table summary="Shopping cart">
                  <tr>
                    <th class="goods-page-image">Image</th>
                    <th class="goods-page-description">Description</th>
                    <th class="goods-page-quantity">Quantity</th>
                    <th class="goods-page-price">Unit price</th>
                    <th class="goods-page-total" colspan="2">Total</th>
                  </tr>
                 
                   <% products.forEach(function(product) { %>
                     <tr>
                      <td class="goods-page-image">
                        <a href="javascript:;"><img src="<%= product.item.image %>" alt="Berry Lace Dress"></a>
                      </td>
                      <td class="goods-page-description">
                        <h3><a href="javascript:;"><%= product.item.name %></a></h3>
                      </td>
                      <td class="goods-page-price">
                        <div class="product-quantity">
                            <div class="input-group bootstrap-touchspin input-group-sm">
                              <a href="/cart/reduce/<%= product.item._id %>">
                              <span class="input-group-btn">
                                
                                  <button class="btn quantity-down bootstrap-touchspin-down" type="button">
                                    <i class="fa fa-angle-down"></i>
                                  </button>
                                
                              </span>
                              </a>
                              <span class="input-group-addon bootstrap-touchspin-prefix" style="display: none;"></span>
                                <input id="product-quantity" type="text" value="<%= product.qty %>" readonly="" class="form-control input-sm" style="display: block;">
                              <span class="input-group-addon bootstrap-touchspin-postfix" style="display: none;"></span>
                              <span class="input-group-btn">
                                <a href="/cart/raise/<%= product.item._id %>">
                                  <button class="btn quantity-up bootstrap-touchspin-up" type="button">
                                  <i class="fa fa-angle-up"></i>
                                  </button>
                                </a>
                              </span>
                            </div>
                        </div>
                      </td>
                      <td class="goods-page-price">
                        <strong><span>₱</span><%= product.item.price %></strong>
                      </td>
                      <td class="goods-page-total">
                        <strong><span>₱</span><%= product.price %></strong>
                      </td>
                      <td class="del-goods-col">
                        <a class="del-goods" href="/cart/remove/<%= product.item._id %>">&nbsp;</a>
                      </td>
                    </tr>
                   <% }) %>
                  
                  
                  
                </table>
                </div>

                <div class="shopping-total">
                  <ul>
                    <li class="shopping-total-price">
                      <em>Total</em>
                      <strong class="price"><span>₱</span><%= totalPrice %></strong>
                    </li>
                  </ul>
                </div>
              </div>
              <button class="btn btn-default" type="submit">Continue shopping <i class="fa fa-shopping-cart"></i></button>
              <a href="/checkout"><button class="btn btn-primary" type="submit">Checkout <i class="fa fa-check"></i></button></a>
            </div>
          </div>
          <!-- END CONTENT -->
</div>

<br>
<% } %>
<% include ./partials/footer %>