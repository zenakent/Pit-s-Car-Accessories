<!-- Body BEGIN -->
<body class="ecommerce">   

    <!-- BEGIN TOP BAR -->
    <div class="pre-header">
        <div class="container">
            <div class="row">
                <!-- BEGIN TOP BAR LEFT PART -->
                <div class="col-md-6 col-sm-6 additional-shop-info">
                    <ul class="list-unstyled list-inline">
                        <li><i class="fa fa-phone"></i><span>0927-771-1193</span></li>
                        <li><i class="fas fa-envelope"></i>pitsCarAccessories@gmail.com</li>   
                    </ul>
                </div>
                <!-- END TOP BAR LEFT PART -->
                <!-- BEGIN TOP BAR MENU -->
                <div class="col-md-6 col-sm-6 additional-nav">
                    <ul class="list-unstyled list-inline pull-right">
                        
                        <% if (!currentUser) { %>
                          <li><a href="/register">Register</a></li>
                          <li><a href="/login">Log In</a></li>
                        <% } else { %>
                          <% if (currentUser.isAdmin) { %>
                            <li><a href="/admin">Admin Page</a></li>
                          <% } %>
                          <li><a href="/profile/<%= currentUser._id %>">My Account</a></li>
                          <li><a href="/logout">Log Out</a></li>
                        <% } %>
                    </ul>
                </div>
                <!-- END TOP BAR MENU -->
            </div>
        </div>        
    </div>
    <!-- END TOP BAR -->

    <!-- BEGIN HEADER -->
    <div class="header">
      <div class="container">
        <a class="site-logo pb-0" href="/"><img src="https://scontent.fmnl17-1.fna.fbcdn.net/v/t1.0-9/28577304_159399294761518_2217302082468241221_n.jpg?_nc_cat=107&_nc_ht=scontent.fmnl17-1.fna&oh=4a84fdec83080e81b3acfbe528fb5608&oe=5CC0A938" alt="Pit's Shop Car Accessories" height="auto" width="128"></a>

        <a href="javascript:void(0);" class="mobi-toggler"><i class="fa fa-bars"></i></a>

        <!-- BEGIN CART -->
        <div class="top-cart-block">
          <div class="top-cart-info">
            <a  class="top-cart-info-count">
              <% if (!session.cart) { %>
                0
              <% } else { %>
              <span id="totalQty"></span>
              <% } %>
            </a>
            <a  class="top-cart-info-value">
              <% if (!session.cart) { %>
                <span>₱</span>0.00
              <% } else { %>
                
                <span>₱</span><span id="totalPrice"></span>.00
              <% } %>
            </a>
          </div>
          <i class="fa fa-shopping-cart"></i>
                        
          <div class="top-cart-content-wrapper">
            <div class="top-cart-content">
              <ul class="scroller" style="height: 250px;">
                <% if (!session.cart) { %>
                  Cart is Empty
                <% } else { %>
                  
                <% } %>
              </ul>
              <div class="text-right">
                <a href="/cart" class="btn btn-default">View Cart</a>
                <a href="/checkout" class="btn btn-primary">Checkout</a>
              </div>
            </div>
          </div>            
        </div>
        <!--END CART -->

        <!-- BEGIN NAVIGATION -->
        <div class="header-navigation">
          <ul style="display:inline;">
            <li><a href="/product-list">Store</a></li>
            
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" data-target="#" href="javascript:;">
                Categories
                
              </a>
                
              <ul class="dropdown-menu">
                <li><a href="/product-list-Steering Wheel"> Steering Wheels</a></li>
                <li><a href="/product-list-Alarm"> Alarms</a></li>
                <li><a href="/product-list-Strut Bar"> Strut Bars</a></li>
                <li><a href="/product-list-Air Intake"> Air Intake</a></li>
                <li><a href="/product-list-Plate Accessories"> Plate Accessories</a></li>
                <li><a href="/product-list-Visor"> Visor</a></li>
                <li><a href="/product-list-Body"> Body</a></li>
                <li><a href="/product-list-Emblem"> Emblem</a></li>
                <li><a href="/product-list-Grill"> Grill</a></li>
                <li><a href="/product-list-Bumper"> Bumper</a></li>
                <li><a href="/product-list-Adaptor"> Adaptor</a></li>
                <li><a href="/product-list-Visor"> Visor</a></li>
              </ul>
            </li>
            <li><span class="sep"></span></li>
            <!-- BEGIN TOP SEARCH -->
            <li class="menu-search">
                <form action="/product-list" id="shopSearch"method="GET" width="10">
                  <div class="input-group">
                    <input type="text" placeholder="Search" class="form-control" name="search">
                    <span class="input-group-btn">
                      <button class="btn btn-primary" type="submit">Search</button>
                    </span>
                  </div>
                </form>
              
            </li>
            <!-- END TOP SEARCH -->
            
            <li><a style="color: red;">              <%= error %><%= success %></a></li>
          </ul>
        </div>
        <!-- END NAVIGATION -->
      </div>
    </div>
    <!-- Header END -->
    
    
